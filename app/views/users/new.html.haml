%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, html: {class: 'form-horizontal'} do |f|
        %header
          %h1 Register
        %fieldset
          .form-group
            .col-sm-6= f.text_field :username
          .form-group
            .col-sm-6= f.text_field :full_name, label: "Full Name", value: @friend_name
          .form-group
            .col-sm-6= f.text_field :email, label: 'Email Address', value: @friend_email
          .form-group
            .col-sm-6= f.password_field :password
          .form-group
            .col-sm-6= f.password_field :password_confirmation, label: 'Password Confirmation'
            = hidden_field_tag :inviter_id, @inviter_id
        %fieldset.credit_card
        %fieldset.actions.control-group
          .controls
            = f.submit 'Sign Up', class: 'btn btn-default'
