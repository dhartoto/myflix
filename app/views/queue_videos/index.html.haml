%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            - @queue_videos.each do |queue|
              %tr
                %td
                  = queue.position
                %td
                  = link_to queue.video_name.titleize, video_path(queue.video)
                %td
                  = button_to "Play", nil, class: "btn btn-default"
                %td
                  = queue.rating
                %td
                  = link_to queue.genre_name.titleize, genre_path(queue.video.genre)
                %td
                  = link_to queue_video_path(queue), method: :delete do
                    %i.glyphicon.glyphicon-remove
        = button_to "Update Instant Queue", nil, class: "btn btn-default"
